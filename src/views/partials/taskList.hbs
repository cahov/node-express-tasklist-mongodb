<table class="table">
  <thead>
    <tr>
      <th>N</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>
        <td>{{inc @index "+" 1}}</td>
        <td>
          <div style="max-height: 15em; overflow-y: auto; width: 100%; display: block;">
              {{this.title}}
          </div>
        </td>
        <td>
          <div style="max-height: 15em; overflow-y: auto; width: 100%; display: block;">
              {{this.description}}
          </div>
          </td>
        <td>
            <div class="btn-group d-flex flex-wrap gap-1" role="group">

          {{#if this.completed}}
            <button class="btn btn-info mx-1 rounded w-50"
              onclick="location.href='/toggle/{{this._id}}'"
            >Terminada</button>
          {{else}}
            <button class="btn btn-success mx-1 rounded w-50"
              onclick="location.href='/toggle/{{this._id}}'"
            >Completar</button>
          {{/if}}
          <button class="btn btn-warning mx-1 rounded w-50" onclick="location.href='/edit/{{this._id}}'">Editar</button>
          <button class="btn btn-danger mx-1 rounded w-50"
            onclick="location.href='/delete/{{this._id}}'"
          >Eliminar</button>
            </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>